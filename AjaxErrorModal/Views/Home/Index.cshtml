@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>MvcAjaxErrorModal</h1>
</div>

<div class="row">
    <div class="col-md-8">
        <a href="#" class="js-get-employees">Show employees via ajax call</a>
        <div id="results"></div>
    </div>        
</div>

<script type="text/javascript">

    $(function() {

        $(".js-get-employees").on("click", loadEmployees );

        function loadEmployees() {
            $.get("/Employee/List", function (data) {
                $("#results").html(data);
            });
        };
        
    });


</script>